{% extends 'base.html.twig' %}

{% block title %}Hello BankrollController!{% endblock %}

{% block content %}
<div class="headline">
    <h1 class="mt-4">Bankroll</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="{{ path('bankroll') }}">Bankroll</a></li>
            <li class="breadcrumb-item active">Classement</li>
        </ol>

    <div class="inner">
        <p>Classement des comptes les plus rentables</p>
    </div>
</div>

<main>
    <div class="container-fluid">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                     Classement List
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <td colspan="6"> 
                                    Nombre de bankrolls partagées : {{ bankrolls|length }}
                                </td>
                            </tr>
                            <tr>
                                <th>Pseudo</th>
                                <th>Nombre de paris</th>
                                <th>ROI</th>
                                <th>ROC</th>
                                <th>Bénéfices/Pertes</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            {% if bankrolls is empty %}
                                <tr>
                                    <td colspan="6" style="text-align:center;">Aucun résultat</td>
                                </tr>
                            {% endif %}
                            {% for bankroll in bankrolls %}
                                <tr>
                                    <td>{{ bankroll.user.username }}</td>
                                    <td>#</td>
                                    <td>{{ bankroll.roi }}</td>
                                    <td>{{ bankroll.roc }}</td>
                                    <td>{{ bankroll.benefsCumul }}</td>
                                    <td class="form-row align-items-end">
                                        
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div>
                {{ knp_pagination_render(bankrolls) }}
            </div>
        </div>

    </div>
</main>
{% endblock %}
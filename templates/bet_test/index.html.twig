{% extends 'base.html.twig' %}

{% block title %}Hello BetTestController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="sidebar" style="text-align:right">
        <a>Bankeroll : {{ user.currentBankroll }}</a>
    </div>
    <div class="sidebar">
        <a>Votre ROI est de : {% if user.roi == null %}0{% else %}{{ user.roi }} {% endif %}%</a>
        <a>Votre ROC est de : {% if user.roc == null %}0{% else %}{{ user.roc }} {% endif %}%</a>
    </div>

    <table class="table mx-auto table-striped table-hover">
        <thead>
            <tr>
                <td colspan="6"> 
                    Nombre de paris : {{ bets|length }}
                </td>
            </tr>
            <tr>
                <th>Date</th>
                <th>Cote</th>
                <th>Mise</th>
                <th>Gain</th>
                <th>Résultat du paris</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            {% if bets is empty %}
                <tr>
                    <td colspan="6" style="text-align:center;">Aucun résultat</td>
                </tr>
            {% endif %}
            {% for bet in bets %}
                <tr>
                    <td>{{ bet.date|date("d-M-y") }}</td>
                    <td>{{ bet.cote }}</td>
                    <td>{{ bet.mise }}</td>
                    <td>{{ bet.gain }}</td>
                    <td>
                    {% if bet.resultBet == "Valide" %}
                        <span class="fa fa-arrow-circle-up" aria-hidden="true" style="color: green"></span> 
                    {% elseif bet.resultBet == "Perdu" %}
                        <span class="fa fa-arrow-circle-down" aria-hidden="true" style="color: red"></span> 
                    {% endif %}    
                    </td>
                    <td class="form-row align-items-end">
                        <a href="{{ path('showgametestbettest', {'id' : bet.id}) }}" class="btn btn-primary">
                            <span class="fa fa-eye" aria-hidden="true"></span> 
                        </a>
                        <a href="{{ path('updatebettest', {'id' : bet.id }) }}" class="btn btn-primary">
                            <span class="fa fa-edit" aria-hidden="true"></span>           
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div style="text-align:right;">
        <a href="{{ path('createbettest') }}" class="btn btn-success">
            <span class="fa fa-plus" aria-hidden="true"></span>           
        </a>
    </div>
</div>
{% endblock %}
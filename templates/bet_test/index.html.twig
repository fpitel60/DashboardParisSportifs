{% extends 'base.html.twig' %}

{% block title %}Hello BetTestController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table class="table mx-auto table-striped table-hover">
        <thead>
            <tr>
                <td colspan="6"> 
                    Nombre de paris : {{ bets|length }}
                </td>
            </tr>
            <tr>
                <th>Date</th>
                <th>Cote</th>
                <th>Mise</th>
                <th>Gain</th>
                <th>Résultat du paris</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            {% if bets is empty %}
                <tr>
                    <td colspan="6" style="text-align:center;">Aucun résultat</td>
                </tr>
            {% endif %}
            {% for bet in bets %}
                <tr>
                    <td>{{ bet.date|date("d-M-y") }}</td>
                    <td>{{ bet.cote }}</td>
                    <td>{{ bet.mise }}</td>
                    <td>{{ bet.gain }}</td>
                    <td>{{ bet.resultbet }}</td>
                    <td class="form-row align-items-end">
                        Afficher les choix du paris
                        <a href="{{ path('updatebettest', {'id' : bet.id }) }}" class="btn btn-primary">
                            <span class="fa fa-edit" aria-hidden="true"></span>           
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div style="text-align:right;">
        <a href="{{ path('createbettest') }}" class="btn btn-success">
            <span class="fa fa-plus" aria-hidden="true"></span>           
        </a>
    </div>
</div>
{% endblock %}